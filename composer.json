{
    "name": "cline/ferret",
    "description": "Ferret out configuration files in various formats from your filesystem.",
    "license": "MIT",
    "keywords": [
        "config",
        "configuration",
        "ferret",
        "json",
        "laravel",
        "php",
        "rc",
        "yaml"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@cline.sh"
        }
    ],
    "require": {
        "php": "^8.5.0",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "illuminate/filesystem": "^10.0||^11.0||^12.0",
        "illuminate/support": "^10.0||^11.0||^12.0",
        "nette/neon": "^3.4.6",
        "saloonphp/xml-wrangler": "^1.4.1",
        "spatie/laravel-package-tools": "^1.92.7",
        "symfony/yaml": "^7.4",
        "yosymfony/toml": "^1.0.4"
    },
    "require-dev": {
        "cline/coding-standard": "^1.6.2",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "symfony/var-dumper": "^6.0|^7.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cline\\Ferret\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Ferret": "Cline\\Ferret\\Facades\\Ferret"
            },
            "providers": [
                "Cline\\Ferret\\FerretServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs check --fix",
        "refactor": "rector",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "test:lint": "vendor/bin/ecs check",
        "test:refactor": "rector --dry-run",
        "test:type-coverage": "pest --parallel --min=90 --type-coverage",
        "test:types": "phpstan",
        "test:unit": "pest --parallel --min=90 --coverage"
    }
}
