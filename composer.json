{
    "name": "cline/ferret",
    "description": "Ferret out configuration files in various formats from your filesystem.",
    "license": "MIT",
    "keywords": [
        "config",
        "configuration",
        "ferret",
        "json",
        "laravel",
        "php",
        "rc",
        "yaml"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@cline.sh"
        }
    ],
    "require": {
        "php": "^8.5.0",
        "illuminate/contracts": "^12.0",
        "illuminate/filesystem": "^12.0",
        "illuminate/support": "^12.0",
        "spatie/laravel-package-tools": "^1.92.7",
        "symfony/yaml": "^7.3",
        "nette/neon": "^3.4",
        "saloonphp/xml-wrangler": "^1.4",
        "yosymfony/toml": "^1.0"
    },
    "require-dev": {
        "cline/php-cs-fixer": "^1.2.1",
        "driftingly/rector-laravel": "^2.1.4",
        "ergebnis/composer-normalize": "^2.48.2",
        "larastan/larastan": "^3.8",
        "orchestra/testbench": "^10.8",
        "pestphp/pest": "^4.1.6",
        "pestphp/pest-plugin-drift": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "phpstan/phpstan": "^2.1.32",
        "rector/rector": "^2.2.9",
        "symfony/var-dumper": "^7.4.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cline\\Ferret\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Ferret": "Cline\\Ferret\\Facades\\Ferret"
            },
            "providers": [
                "Cline\\Ferret\\FerretServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix",
        "refactor": "rector",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "test:lint": "vendor/bin/php-cs-fixer check --diff",
        "test:refactor": "rector --dry-run",
        "test:type-coverage": "pest --parallel --min=90 --type-coverage",
        "test:types": "phpstan",
        "test:unit": "pest --parallel --min=90 --coverage"
    }
}
